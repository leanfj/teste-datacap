<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <div class="container">
        <h1>Teste DataCap</h1>

        <header>
            <%- include('../partials/header'); %>
        </header>

        <div class="row">
            <form action="/consulta-envio" method="GET">
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupFile01">Consultar Tracking Code</label>
                    <input type="input" class="form-control" id="inputGroupFile01" name="trackingcode">
                    <button type="submit" class="btn btn-primary">
                        Consultar
                    </button>
                </div>
            </form>
        </div>

        <div class="row">

            <% if(trackingcode !== ''){ %>
                <p>Tracking Code consultado <strong>
                        <%= trackingcode %>
                    </strong></p>

                <ul>
                    <% dados.forEach(function(dados) { %>
                        <li>
                            <strong>
                                <%= dados.Chave %> ----> <%= dados.Valor %>
                            </strong>
                        </li>
                        <% }); %>
                </ul>
                <% } else { %>
                   <p>Sem dados para consulta</p>
                    <% } %>


        </div>

    </div>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>